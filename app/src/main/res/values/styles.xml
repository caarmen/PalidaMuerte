<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="selectableItemBackground">@drawable/selector</item>
        <item name="actionBarItemBackground">@drawable/selector</item>
        <item name="android:windowBackground">@drawable/gray_gradient</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="CategoryListTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBarTransparentStyle</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="PoemDetailTheme" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="backgroundSplit">#CC000000</item>
    </style>

    <style name="ActionBarTransparentStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="background">@null</item>
    </style>

    <style name="TextAppearancePoemDetailTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#CDCCFF</item>
    </style>

    <style name="TextAppearanceCategoryTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/category_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TextAppearancePoemListTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TextAppearancePoemTypeAndNumber" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#DDDDCC</item>
    </style>

    <style name="TextAppearancePoemListCategoryName" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#DDDDCC</item>
    </style>

    <style name="TextAppearancePoemListSearchContext" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#D8CCDD</item>
    </style>

</resources>